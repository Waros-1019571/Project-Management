<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="18dp"
    android:background="@color/green_dark"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/green_light"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <EditText
                android:id="@+id/descriptionInput"
                android:layout_width="210dp"
                android:layout_height="62dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/description"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.87"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.376" />

            <TextView
                android:id="@+id/ListAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_add"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.022" />

            <TextView
                android:id="@+id/TitleLable"
                android:layout_width="wrap_content"
                android:translationX="170px"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/titleInput"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/DesciprionLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="40px"
                android:text="@string/description"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/descriptionInput"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/titleInput"
                android:layout_width="210dp"
                android:layout_height="62dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/title"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.868"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.256" />

            <Button
                android:id="@+id/addNewListButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addList"
                android:text="@string/add"
                android:backgroundTint="@color/green_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.919"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.499" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>